<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="progressDialog" parent="AppTheme">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">#000000</item>
    </style>

    <style name="ButtonKeyBoardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/selector_keyboard</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/lightWhite</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="KeyBoardStyle">
        <item name="android:layout_width">47dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/selector_keyboard</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/lightWhite</item>
        <item name="android:textSize">13dp</item>
    </style>

</resources>
