<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_appoint_code"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <TextView
        android:id="@+id/txt_print_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="53dp"
        android:text="@string/waiting_for_printing"
        android:textColor="@color/common_divider"
        android:textSize="31sp" />

    <ImageView
        android:id="@+id/img_printer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/print_tag" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_qr_code_app"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@color/green_main" />

        <ImageView
            android:id="@+id/img_qr_code_wx"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="36dp"
            android:src="@color/green_main" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        android:text="@string/please_download_app_and_attention"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <Button
        android:id="@+id/bt_back"
        android:layout_width="143dp"
        android:layout_height="23dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="33dp"
        android:background="@drawable/shape_radius_stroke_red"
        android:text="@string/go_back_home_page"
        android:textColor="@color/white"
        android:textSize="11sp" />


</LinearLayout>