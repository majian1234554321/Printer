<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_appoint_code"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <TextView
        android:id="@+id/txt_print_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="106dp"
        android:gravity="center"
        android:text="打印中\n请稍候..."
        android:textColor="@color/common_divider"
        android:textSize="62sp" />

    <ImageView
        android:id="@+id/img_printer"
        android:layout_width="533dp"
        android:layout_height="366dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/print_tag" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_qr_code_app"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_qr_code_app" />

        <ImageView
            android:id="@+id/img_qr_code_wx"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="72dp"
            android:src="@drawable/icon_qr_code_wx" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26dp"
        android:text="@string/please_download_app_and_attention"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt_back"
        android:layout_width="286dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="66dp"
        android:background="@drawable/shape_radius_stroke_red"
        android:text="@string/go_back_home_page"
        android:textColor="@color/white"
        android:textSize="22sp" />


</LinearLayout>