<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_appoint_code"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <TextView
        android:id="@+id/txt_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="26dp"
        android:text="@string/hint_appoint_code"
        android:textColor="@color/lightWhite"
        android:textSize="11sp"

        />

    <ImageView
        android:id="@+id/img_tag"
        android:layout_width="250dp"
        android:layout_height="176dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:src="@drawable/appoint_take_ticket"

        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="16.5dp"
        android:src="@color/lightWhite" />

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27.5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/please_input_appoint_code"
            android:textColor="@color/lightWhite"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/txt_appoint_code"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/shape_rectangle_stroke_light_white"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dp"
            android:textColor="@color/lightWhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_one"
                style="@style/KeyBoardStyle"
                android:text="1" />

            <Button
                android:id="@+id/bt_two"
                style="@style/KeyBoardStyle"
                android:layout_marginLeft="14dp"
                android:text="2" />

            <Button
                android:id="@+id/bt_three"
                style="@style/KeyBoardStyle"
                android:layout_marginLeft="14dp"
                android:text="3" />

            <ImageButton
                android:id="@+id/bt_delete"
                style="@style/KeyBoardStyle"
                android:layout_marginLeft="14dp"
                android:src="@drawable/ic_launcher" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/linear_second"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_four"
                    style="@style/KeyBoardStyle"
                    android:text="4" />

                <Button
                    android:id="@+id/bt_five"
                    style="@style/KeyBoardStyle"
                    android:layout_marginLeft="14dp"
                    android:text="5" />

                <Button
                    android:id="@+id/bt_six"
                    style="@style/KeyBoardStyle"
                    android:layout_marginLeft="14dp"
                    android:text="6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/linear_second"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_seven"
                    style="@style/KeyBoardStyle"
                    android:text="7" />

                <Button
                    android:id="@+id/bt_eight"
                    style="@style/KeyBoardStyle"
                    android:layout_marginLeft="14dp"
                    android:text="8" />

                <Button
                    android:id="@+id/bt_nine"
                    style="@style/KeyBoardStyle"
                    android:layout_marginLeft="14dp"
                    android:text="9" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_clear"
                style="@style/KeyBoardStyle"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"

                android:text="@string/clear" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_zero"
                style="@style/KeyBoardStyle"
                android:text="0" />

            <Button
                android:id="@+id/bt_ok"
                style="@style/KeyBoardStyle"
                android:layout_width="match_parent"
                android:layout_marginLeft="14dp"
                android:text="@string/sure" />


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/bt_back"
        android:layout_width="143dp"
        android:layout_height="23dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="33dp"
        android:background="@drawable/shape_radius_stroke_red"
        android:text="@string/go_back_home_page"
        android:textColor="@color/white"
        android:textSize="11sp" />


</LinearLayout>